---
import { getParticipantById, getAllParticipants } from '../../../backend/backend.mjs';

const { id } = Astro.params;
const invite = await getParticipantById(id);
---

<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{invite.Nom_invite}{invite.Prenom_invite}</title>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-900 text-white">
  <div class="container mx-auto py-10">
    <a href="/invites" class="text-blue-400 hover:underline">&larr; Retour aux activit√©s</a>
    
    <div class="mt-6 max-w-4xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
      <img src={`https://sae203.ethan-omastaparisot.com/api/files/Invites/${invite.id}/${invite.Photo_invite}`} alt={invite.Nom_invite && invite.Prenom_invite} class="w-full h-96 object-cover rounded" />
      <h1 class="text-3xl font-bold mt-4 font-spacemono">{invite.Nom_invite} {invite.Prenom_invite}</h1>
      <p class="text-gray-400">{invite.Email_invite}</p>
      <p class="mt-4">{invite.Biographie_invite}</p>
    </div>
  </div>
</body>
</html>