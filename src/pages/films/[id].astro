---
import { getFilmById, getAllFilms } from '../../../backend.mjs';

const { id } = Astro.params;
const film = await getFilmById(id);
---

<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{film.Titre_film}</title>
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-900 text-white">
  <div class="container mx-auto py-10">
    <a href="/films" class="text-blue-400 hover:underline">&larr; Retour aux films</a>
    
    <div class="mt-6 max-w-4xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
      <img src={`http://127.0.0.1:8090/api/files/Films/${film.id}/${film.Affiche_film}`} alt={film.Titre_film} class="w-full h-96 object-cover rounded" />
      <h1 class="text-3xl font-bold mt-4 font-irishgrover">{film.Titre_film}</h1>
      <p class="text-gray-400">{film.Date_film}</p>
      <p class="mt-4">{film.Synopsis_film}</p>
      {film.Bande_annonce_film && (
        <div class="mt-4">
          <a href={film.Bande_annonce_film} target="_blank" class="text-blue-400 hover:underline">Voir la bande-annonce</a>
        </div>
      )}
    </div>
  </div>
</body>
</html>