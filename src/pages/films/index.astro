---
import Layout from '../../layouts/Layout.astro';
import { getAllFilms } from '../../../backend/backend.mjs';

const films = await getAllFilms();
---

<Layout>
    <h1 class="text-4xl font-extrabold text-center mb-12 text-white font-spacemono mt-8">
        Liste des Films
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 mb-12 px-4">
        {films.map(film => (
            <a href={`/films/${film.id}`} class="group block bg-gray-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transform transition-all duration-300 ease-in-out hover:scale-105">
                <img 
                    src={`http://127.0.0.1:8090/api/files/Films/${film.id}/${film.Affiche_film}`} 
                    alt={film.Titre_film} 
                    class="w-full h-56 object-cover rounded-t-2xl group-hover:scale-105 transition-transform duration-300 ease-in-out" 
                />
                <div class="p-6 bg-gradient-to-t from-gray-800 via-gray-900 to-transparent rounded-b-2xl group-hover:bg-gradient-to-t group-hover:from-gray-800 group-hover:via-indigo-800 group-hover:to-transparent">
                    <h2 class="text-2xl font-semibold text-white font-irishgrover mb-2 group-hover:text-indigo-400 transition-colors duration-300">
                        {film.Titre_film}
                    </h2>
                    <p class="text-gray-300 text-sm mb-3">{film.Date_film}</p>
                    <div class="flex items-center justify-between mt-4">
                        <span class="text-sm text-indigo-400 group-hover:text-indigo-500 transition-colors duration-300">Voir plus</span>
                        <svg class="w-5 h-5 text-indigo-400 group-hover:text-indigo-500 transition-colors duration-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </div>
            </a>
        ))}
    </div>
</Layout>
